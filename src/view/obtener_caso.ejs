        async function obtenerCaso(){
        const caso = document.getElementById("inputCaso").value;
        const consulta = {con:caso};
        const options = {
            method: "POST",
            body: JSON.stringify(consulta),
            headers: {
                "Content-Type": "application/json"
            }
        };
    
        const response = await fetch('/gest_caso', options);
        result = await response.json();
        console.log(result.id)
        if (result.id > 0 ){
            //Simplify addresses
            var nac = result.fechanac.split("T")
            var examen = result.fechaex.split("T")
            var est = result.fechaex.split("T")
            var fechanac = nac[0];
            var fechaex = examen[0];
            fecha_estado = est[0];
            var estado;
            console.log(result.resultado)
            if (result.resultado == 0){result.resultado= 'Negativo';estado ='Sano';}
            else if (result.resultado == 1){result.resultado= 'Negativo';estado ='Curado';}
            else if(result.resultado == 2 ) {result.resultado= 'Positivo'; estado ='Tratamiento en casa';}
            else if(result.resultado == 3) {result.resultado= 'Positivo'; estado ='Tratamiento en hospital';}
            else if(result.resultado == 4 ){result.resultado= 'Positivo';estado ='UCI';}
            else if(result.resultado == 5 ){result.resultado= '-';estado ='Fallecido';}
            
            console.log(result.resultado)
            document.getElementById("idcaso").innerHTML = result.id;
            document.getElementById("nombre_completo").innerHTML = result.nombre +" "+ result.apellido;
            document.getElementById("cedula").innerHTML = result.cedula;
            if (result.sexo == 1){document.getElementById("sexo").innerHTML = 'Masculino';}
            else{document.getElementById("sexo").innerHTML = 'Femenino';}
            document.getElementById("fechanac").innerHTML = fechanac;
            document.getElementById("casa").innerHTML = result.direc;
            document.getElementById("trabajo").innerHTML = result.dirt;
            console.log(result)
            document.getElementById("examen").innerHTML = result.resultado;
            document.getElementById("fechaex").innerHTML = fechaex;
            document.getElementById("estado").innerHTML = estado;
            document.getElementById("fecha_estado").innerHTML = fecha_estado;
    
            
    
            var id = result.id;
        const consulta2 = {con:id};
        const options2 = {
            method: "POST",
            body: JSON.stringify(consulta2),
            headers: {
                "Content-Type": "application/json"
            }
        };  

        const response2 = await fetch('/tabla', options2);
        result1 = await response2.json();
        console.log(result1.length)
        for (i=0; i<result1.length; i++){
        if (result1[i].estado == 0){result1[i].estado='Sano';}
        else if (result1[i].estado == 1){result1[i].estado='Curado';}
        else if(result1[i].estado == 2 ) {result1[i].estado='Tratamiento en casa';}
        else if(result1[i].estado == 3 ) { result1[i].estado='Tratamiento en hospital';}
        else if(result1[i].estado == 4 ){result1[i].estado='UCI';}
        else if(result1[i].estado == 5 ){result1[i].estado='Fallecido';}
            
        console.log(result1[i].estado)}
        document.getElementById("estado").innerHTML = result1[0].estado;
        var table = document.getElementById('table');
        table.innerHTML = "";

        result1.forEach(function(object) {
            var tr = document.createElement('tr');
            var fecha1 = object.fecha.split("T")
            var fecha2 = fecha1[0];
            tr.innerHTML = '<th>' + fecha2 + '</th>' + '<td>' + object.estado + '</td>';
            table.appendChild(tr);
        });
    
           
        } else {
            swal({
              title: "ERROR!",
              text: "No hay registros del caso ingresado",
              icon: "warning",
            });
          }
    }
    
    async function actualizarCaso(){
        if (document.getElementById("inputCaso").value != '' && document.getElementById("fecha_estado").value != '' && document.getElementById("fechact").value != ''){
            if (document.getElementById("estado").innerHTML != 'Fallecido') {
                var data = [];
                var id = document.getElementById("idcaso").innerHTML;
                var fecha_estado = document.getElementById("fechact").value;
                var estado_actual = document.getElementById("lista_estados").value;
                data.push(id)
                data.push(fecha_estado)
                data.push(estado_actual)
    
                const consulta = {con:data};
                const options = {
                    method: "POST",
                    body: JSON.stringify(consulta),
                    headers: {
                        "Content-Type": "application/json"
                    }
                };  
    
                const response = await fetch('/estado', options);
                result = await response.json();
                swal({
                    title: "Caso actualizado",
                    
                    icon: "success",
                });
                obtenerCaso();
                document.forms['formUpdate'].reset()
                
                
            } else {
                swal({
                    title: "ERROR!",
                    text: "No se puede cambiar el estado de un paciente fallecido. Verifique la información o contacte con el administrador.",
                    icon: "warning",
                });
            }  
        } else {
            swal({
                title: "ERROR!",
                text: "Debe ingresar un valor en todos los campos",
                icon: "warning",
              });
        }
    }
    
    //Update
    if (document.getElementById('formUpdate') != undefined) {
        const formUpdate = document.getElementById('formUpdate')
        formUpdate.addEventListener('submit', (e) =>{
            e.preventDefault();
            let form = e.target
            if (document.getElementById("inputCaso").value == '' || document.getElementById("fecha_estado").value == '' || document.getElementById("fechact").value == ''){ 
                swal({
                    title: "ERROR!",
                    text: "Todos los campos deben ser ingresados",
                    icon: "warning",
                });
            } else {
                if (document.getElementById("estado").innerHTML != 'Fallecido') {
                    swal({
                        title: "Caso actualizado",
                        
                        icon: "success",

                    });
                    form.submit()
                    document.forms['formUpdate'].reset()
                    obtenerCaso();
                } else {
                    swal({
                        title: "ERROR!",
                        text: "No se puede cambiar el estado de un paciente fallecido. Verifique la información o contacte con el administrador.",
                        icon: "warning",
                    });
                } 
            }
        });
    }
