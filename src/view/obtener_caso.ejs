    <script>  
    //Obtener fecha de hoy

		let today = new Date();
		let dd = today.getDate();
		let mm = today.getMonth() + 1; //enero es 0!
		let yyyy = today.getFullYear();
		
		if (dd < 10) {
			dd = "0" + dd;
		}
		if (mm < 10) {
			mm = "0" + mm;
		}
		
		today = yyyy + "-" + mm + "-" + dd ;

		//Inicialziar el calendario con la fecha de hoy
		document.getElementById("fechact").value = today;
        document.getElementById("fechact").max = today;
		
		
