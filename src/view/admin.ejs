<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
    integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
  <link rel="stylesheet" href="userestilo">
  <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:wght@300;600&display=swap" rel="stylesheet">
  <link href="https://unpkg.com/ionicons@4.5.10-0/dist/css/ionicons.min.css" rel="stylesheet">
  <script src='/socket.io/socket.io.js'></script>
  <script src="scripts/socketio.js"></script>
  <title>Admin</title>
</head>

<body>
  <div class="d-flex" id="content-wrapper">
    <!-- Sidebar -->
    <div id="sidebar-container" class="bg-primary">
      <div class="logo">
        <h4 class="text-light font-weight-bold mb-0"><img src="https://i.postimg.cc/WpdksRTY/ICON.png" alt=""></h4>
      </div>
      <div class="menu">
        <a href="/admin" class="d-block text-light p-3 border-0"><i class="icon ion-md-book lead mr-2"></i>
          Registro</a>
      </div>
    </div>
    <!-- Fin sidebar -->

    <div class="w-100">
      <!-- Navbar -->
      <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
        <div class="container">
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
              <li class="nav-item dropdown">
                <a class="nav-link text-dark dropdown-toggle" href="#" id="navbarDropdown" role="button"
                  data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  <img src="https://i.postimg.cc/ZqwbCQdY/config.png" class="img-fluid rounded-circle avatar mr-2"
                    alt="https://generated.photos/" />
                  Admin
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                  <a class="dropdown-item" href="/">Cerrar sesión</a>
                </div>
              </li>
            </ul>
          </div>
        </div>
      </nav>
      <!-- Fin Navbar -->

      <!-- Page Content -->
      <div id="content" class="bg-grey w-100">
        <section class="bg-light py-3">
          <div class="container">
            <div class="row-centered">
              <div class="col-lg-9 col-md-8">
                <h1 class="font-weight-bold mb-0">Administración</h1>
                <p class="lead text-muted">Registrar usuario...</p>
              </div>
              <div class="col-lg-3 col-md-4 d-flex">
                <!-- <button class="btn btn-primary w-100 align-self-center">Descargar reporte de hoy</button> -->
              </div>
            </div>
          </div>
        </section>

        <section>
          <div class="container">
            <div class="row-centered">
              <div class="col-lg-12 my-4">
                <div class="card rounded-0">
                  <div class="card-header bg-light">
                    <h5 class="d-inline-block font-weight-bold mb-0">Formulario de Registro</h5>
                  </div>
                  <div class="card-body">
                    <div class="container">
                      <form id="formAdmin" action="/form" method="post">
                        <div class="row">
                          <div class="col-lg-8 my-10">
                            <div class="form-group mb-4">
                              <label for="nombre" class="font-weight-bold">Nombre</label>
                              <input class="form-control bg-grey" id="nombre" name="nombre"
                                placeholder="Ingrese el nombre" autocomplete="off">
                            </div>
                            <div class="form-group mb-4">
                              <label for="apellido" class="font-weight-bold">Apellido</label>
                              <input class="form-control bg-grey" id="apellido" name="apellido"
                                placeholder="Ingrese el apellido" autocomplete="off">
                            </div>
                            <div class="form-group mb-4">
                              <label for="cedula" class="font-weight-bold">Cédula</label>
                              <input class="form-control bg-grey" id="cedula" name="cedula"
                                placeholder="Ingrese número de documento" autocomplete="off">
                            </div>
                          </div>
                          <div class="col-lg-8 my-50">
                            <div class="form-group mb-0">
                              <label for="exampleInputEmail1" class="font-weight-bold">Rol:</label>
                            </div>
                            <div class="form-group mb-4">
                              <div class="btn-group btn-group-toggle" data-toggle="buttons">
                                <label class="btn btn-primary active">
                                  <input type="radio" name="rol" value=1 id="medico" checked> Médico
                                </label>
                                <label class="btn btn-primary">
                                  <input type="radio" name="rol" value=2 id="ayudante"> Ayudante
                                </label>
                              </div>
                            </div>
                            <div class="form-group mb-4">
                              <label for="user" class="font-weight-bold">Usuario</label>
                              <input class="form-control bg-grey" id="user" name="usuario"
                                placeholder="Ingrese el nombre de usuario" autocomplete="off">
                            </div>
                            <div class="form-group mb-4">
                              <label for="pass" class="font-weight-bold">Contraseña</label>
                              <input type="password" class="form-control bg-grey" id="pass" name="contra"
                                placeholder="Ingrese la contraseña" autocomplete="off">
                              <br>
                              <button type="submit" class="btn btn-primary h-50 w-30">Registrar usuario</button>
                              <button type="button" onclick=limpiarform(); class="btn btn-primary h-50 w-30">Limpiar</button>
                            </div>
                          </div>

                        </div>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>
      </div>
    </div>
  </div>

  <!-- Optional JavaScript -->
  <!-- jQuery first, then Popper.js, then Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
    integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
    crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
    integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
    crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
    integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.3/dist/Chart.min.js"
    integrity="sha256-R4pqcOYV8lt7snxMQO/HSbVCFRPMdrhAFMH+vr9giYI=" crossorigin="anonymous"></script>
  <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
  <script src="scripts/admin.js"></script>
  <script> 
   function limpiarform(){
  document.forms['formAdmin'].reset()
  }
  </script>
</body>

</html>